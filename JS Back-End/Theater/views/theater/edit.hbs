<main>
    <form class="theater-form" action="/theater/edit/{{theater._id}}" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" placeholder="Theater name" name="title" value="{{theater.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{theater.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" placeholder="Image Url" name="imgUrl" value="{{theater.imgUrl}}">
        </div>
        <div class="check">
            <input type="checkbox" name="public" id="check-box" {{#if theater.public}}checked{{/if}}>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>