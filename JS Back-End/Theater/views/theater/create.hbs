<main>
    <form class="theater-form" action="/theater/create" method="POST">
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" name="title" placeholder="Theater name" value="{{data.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{data.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input name="imgUrl" type="text" placeholder="Image Url" value="{{data.imgUrl}}">
        </div>
        <div class="check">
            <input name="public" type="checkbox" id="check-box" {{#if data.public}}checked{{/if}}>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>